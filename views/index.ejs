    ></script> -->
    <title>minifURL</title>
  </head>
  <body>
    <div class="container">
      <h1>minifyIt</h1>
      <form action="/shortenURL" method="post" class="my-4 form-inline">
        <label for="fullurl" class="sr-only">Url</label>
        <input
          type="url"
          name="fullurl"
          id="fullurl"
          class="form-control col mr-2"
          placeholder="Url"
          required
        />
        <button type="submit" class="btn btn-success">minify</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>minified URL</th>
            <th>No. of clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>

          <tr>
            <td>
              <a href="<%= shortUrl.fullURL %>"><%= shortUrl.fullURL %></a>
            </td>
            <td>
              <a href="<%= shortUrl.shortURL %>"><%= shortUrl.shortURL %></a>
            </td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
